{
  "name": "safer-safe",
  "version": "0.0.1",
  "description": "Safer Safe",
  "homepage": "https://github.com/defi-wonderland/safer-safe#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/safer-safe.git"
  },
  "license": "MIT",
  "author": "Wonderland",
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "coverage": "forge coverage --report summary --report lcov --match-path 'test/unit/*'",
    "deploy:ethereum:entrypoint": "bash -c 'source .env && forge script DeployEntrypoint --rpc-url ethereum --account $ETHEREUM_DEPLOYER_NAME --broadcast --verify --chain ethereum -vvvvv'",
    "deploy:ethereum:safer-safe": "bash -c 'source .env && forge script DeploySaferSafe --rpc-url ethereum --account $ETHEREUM_DEPLOYER_NAME --broadcast --verify --chain ethereum -vvvvv'",
    "deploy:optimism:entrypoint": "bash -c 'source .env && forge script DeployEntrypoint --rpc-url optimism --account $OPTIMISM_DEPLOYER_NAME --broadcast --verify --chain optimism -vvvvv'",
    "deploy:optimism:safer-safe": "bash -c 'source .env && forge script DeploySaferSafe --rpc-url optimism --account $OPTIMISM_DEPLOYER_NAME --broadcast --verify --chain optimism -vvvvv'",
    "lint:bulloak": "find test/unit -name '*.tree' | xargs bulloak check",
    "lint:check": "forge fmt --check && yarn lint:sol",
    "lint:fix": "forge fmt && yarn lint:sol --fix && sort-package-json",
    "lint:natspec": "npx @defi-wonderland/natspec-smells --config natspec-smells.config.js",
    "lint:sol": "solhint 'src/**/*.sol' 'script/**/*.sol' 'test/**/*.sol'",
    "prepare": "husky",
    "test": "forge test -vvv",
    "test:fuzz": "medusa fuzz",
    "test:integration": "forge test --match-contract Integration -vvv",
    "test:symbolic": "halmos",
    "test:unit": "forge test --match-contract Unit -vvv",
    "test:unit:deep": "FOUNDRY_FUZZ_RUNS=5000 yarn test:unit"
  },
  "lint-staged": {
    "*.{js,css,md,ts,sol}": "forge fmt",
    "(src|script|test)/**/*.sol": "yarn lint:sol --fix",
    "test/unit/**/*.tree": "yarn lint:bulloak",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@safe-global/safe-contracts": "github:safe-global/safe-smart-account#b75e250"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@defi-wonderland/natspec-smells": "1.1.6",
    "forge-std": "github:foundry-rs/forge-std#1.9.2",
    "halmos-cheatcodes": "github:a16z/halmos-cheatcodes#c0d8655",
    "husky": ">=9",
    "lint-staged": ">=10",
    "solhint-community": "4.0.1",
    "sort-package-json": "2.10.0"
  }
}
